<?xml version="1.0" encoding="utf-8"?>
<resources>

    //ContainerLayout

    <style name="container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    //LinearLayouts

    <style name="linear_layout_page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linear_layout_power_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:weightSum">10</item>
    </style>

    <style name="linear_layout_6_3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:onClick">saveFilterValue</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="linear_layout_filter_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/filter_background_color</item>
    </style>

    <style name="linear_layout_filter_section_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/filter_border_color</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="linear_layout_placeholder_results_container_inside">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/filter_background_color</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="linear_layout_card_design_middle_part">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/filter_background_color</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">2</item>
    </style>

    //TextViews

    <style name="text_view_filter_6_3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="backgroundColor">@color/filter_background_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/filter_text_color</item>
    </style>

    <style name="text_view_top_bot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">14</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="text_view_placeholder_results">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/filter_background_color</item>
        <item name="android:textColor">@color/filter_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_view_placeholder_swipe_no_filter_hits">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="text_view_top_bar_code">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="text_view_placeholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    //ImageViews

    <style name="image_view_top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
    </style>

    //PowerSpinners

    <style name="power_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/filter_text_color</item>
        <item name="android:textColorHint">@color/filter_text_color</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:layout_weight">2</item>
    </style>

    //ListViews

    <style name="list_view_results">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/filter_background_color</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:dividerHeight">20dp</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

    //BottomNavigationView

    <style name="bottom_navigation_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    //Result Page - Result Entry

    <style name="linear_layout_result_entry_score_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">2.5dp</item>
        <item name="android:layout_weight">9</item>
    </style>

    <style name="text_view_result_entry_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="text_view_result_entry_score">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>