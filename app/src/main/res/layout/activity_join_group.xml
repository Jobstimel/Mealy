<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/container"
    tools:context=".ActivityJoinGroup"
    android:background="@color/white">

    <LinearLayout
        style="@style/linear_layout_page"
        android:id="@+id/page_1">

        <include layout="@layout/include_join_group_code_input_screen"/>

    </LinearLayout>

    <LinearLayout
        style="@style/linear_layout_page"
        android:layout_height="match_parent"
        android:id="@+id/page_2">

        <LinearLayout
            style="@style/linear_layout_top_bar"
            android:layout_marginBottom="0dp">

            <TextView
                style="@style/text_view_top_bar_code"
                android:id="@+id/text_view_group_code_2"/>

        </LinearLayout>

        <com.mindorks.placeholderview.SwipePlaceHolderView
            android:id="@+id/swipeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        style="@style/linear_layout_page"
        android:layout_height="match_parent"
        android:id="@+id/page_3">

        <LinearLayout
            style="@style/linear_layout_top_bar">

            <TextView
                style="@style/text_view_top_bar_code"
                android:id="@+id/text_view_group_code_3"/>

        </LinearLayout>

        <LinearLayout
            style="@style/linear_layout_card_design">

            <TextView
                style="@style/text_view_top_bot"
                android:id="@+id/text_view_result_page_top"
                android:text="Abstimmung lÃ¤uft noch"
                android:background="@drawable/background_round_corners_top"/>

            <LinearLayout
                style="@style/linear_layout_card_design_middle_part">

                <LinearLayout
                    style="@style/linear_layout_placeholder_results_container_outside"
                    android:id="@+id/linear_layout_result_page_placeholder">

                    <LinearLayout
                        style="@style/linear_layout_placeholder_results_container_inside">

                        <TextView
                            style="@style/text_view_placeholder_results"
                            android:text="@string/result_placeholder_join_lobby"/>

                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/include_result_page"/>

            </LinearLayout>

            <TextView
                style="@style/text_view_top_bot"
                android:id="@+id/text_view_leave_group"
                android:background="@drawable/selector_reset_filter_button"
                android:layout_weight="14"
                android:onClick="leaveGroup"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_load_screen"/>

    <include layout="@layout/include_tutorial"/>

    <include layout="@layout/include_bottom_navigation_view"/>

</FrameLayout>