<?xml version="1.0" encoding="utf-8"?>
<resources>

    //LinearLayouts

    <style name="linear_layout_card_design">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background_round_corners</item>
        <item name="android:layout_marginBottom">76dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:weightSum">30</item>
    </style>

    <style name="linear_layout_placeholder_swipe_no_filter_hits_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/filter_background_color</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="linear_layout_placeholder_results_container_outside">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/filter_border_color</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="linear_layout_country">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:onClick">saveFilterCountryValue</item>
    </style>

    //ImageViews

    <style name="image_view_country">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:background">@drawable/background_circle</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:onClick">saveImageViewState</item>
    </style>

    <style name="image_view_power_spinner_reset">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_weight">8</item>
    </style>


    //Result Page - Result Entry

    <style name="image_view_result_entry_poster">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="text_view_tutorial_like_dislike">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="image_view_tutorial_like_dislike">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="linear_layout_tutorial_like_dislike_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_view_tutorial_top_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">14</item>
    </style>

</resources>