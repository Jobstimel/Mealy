<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/container"
    tools:context=".ActivityPlayAlone"
    android:background="@color/background">

    <LinearLayout
        style="@style/linear_layout_page"
        android:id="@+id/page_1">

        <LinearLayout
            style="@style/linear_layout_top_bar">

            <TextView
                style="@style/text_view_top_bar_code"
                android:text="Solomodus"/>

        </LinearLayout>

        <LinearLayout
            style="@style/linear_layout_card_design">

            <TextView
                style="@style/text_view_top_bot"
                android:id="@+id/text_view_recipe_count"
                android:background="@drawable/background_round_corners_top"/>

            <include layout="@layout/include_filter"/>

            <TextView
                style="@style/text_view_top_bot"
                android:id="@+id/text_view_create_group_button"
                android:text="Rezepte bewerten"
                android:background="@drawable/selector_reset_filter_button"
                android:onClick="switchPage2"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/linear_layout_page"
        android:id="@+id/page_2">

        <LinearLayout
            style="@style/linear_layout_top_bar"
            android:layout_marginBottom="0dp">

            <TextView
                style="@style/text_view_top_bar_code"
                android:text="Solomodus"/>


        </LinearLayout>

        <com.mindorks.placeholderview.SwipePlaceHolderView
            android:id="@+id/swipeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        style="@style/linear_layout_page"
        android:id="@+id/page_3">

        <LinearLayout
            style="@style/linear_layout_top_bar">

            <TextView
                style="@style/text_view_top_bar_code"
                android:text="Solomodus"/>

        </LinearLayout>

        <LinearLayout
            style="@style/linear_layout_card_design">

            <TextView
                style="@style/text_view_top_bot"
                android:background="@drawable/background_round_corners_top"
                android:text="@string/results"/>

            <LinearLayout
                style="@style/linear_layout_card_design_middle_part">

                <include layout="@layout/include_result_scroll_view"/>

            </LinearLayout>

            <TextView
                style="@style/text_view_top_bot"
                android:background="@drawable/selector_reset_filter_button"
                android:text="ZurÃ¼ck zum Filter"
                android:layout_weight="14"
                android:onClick="switchPage1"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_load_screen"/>

    <include layout="@layout/include_tutorial"/>

    <include layout="@layout/include_bottom_navigation_view"/>

</FrameLayout>