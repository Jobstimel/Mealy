<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/container"
    tools:context=".ActivityCreateGroup"
    android:background="@color/white">

    <LinearLayout
        style="@style/linear_layout_page"
        android:id="@+id/page_1">

        <LinearLayout
            style="@style/linear_layout_top_bar">

            <TextView
                style="@style/text_view_top_bar_code"
                android:text="Gruppe erstellen"/>

        </LinearLayout>

        <LinearLayout
            style="@style/linear_layout_card_design">

            <TextView
                style="@style/text_view_top_bot"
                android:id="@+id/text_view_recipe_count"
                android:background="@drawable/background_round_corners_top"/>

            <include layout="@layout/include_filter"/>

            <TextView
                style="@style/text_view_top_bot"
                android:id="@+id/text_view_create_group_button"
                android:background="@drawable/selector_reset_filter_button"
                android:onClick="createGroup"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/linear_layout_page"
        android:id="@+id/page_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:weightSum="5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/swipe_page_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="21dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

        </LinearLayout>

        <com.mindorks.placeholderview.SwipePlaceHolderView
            android:id="@+id/swipeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <include layout="@layout/include_result_page"/>

    <include layout="@layout/include_load_screen"/>

    <include layout="@layout/include_tutorial"/>

    <include layout="@layout/include_bottom_navigation_view"/>

</FrameLayout>