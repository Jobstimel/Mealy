<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tutorial"
    android:layout_width="350dp"
    android:layout_height="536dp"
    android:background="@drawable/background_round_corners"
    android:backgroundTint="@color/black"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:weightSum="30"
    android:clickable="true">

    <TextView
        style="@style/text_view_tutorial_top_bottom"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/background_round_corners_top"
        android:text="Tutorial"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginBottom="1dp"
        android:weightSum="2"
        android:layout_weight="2">

        <LinearLayout
            style="@style/linear_layout_tutorial_like_dislike_container"
            android:layout_marginRight="1dp">

            <ImageView
                style="@style/image_view_tutorial_like_dislike"
                android:src="@drawable/icon_swipe_left"/>

            <TextView
                style="@style/text_view_tutorial_like_dislike"
                android:text="@string/dislike"/>

        </LinearLayout>

        <LinearLayout
            style="@style/linear_layout_tutorial_like_dislike_container"
            android:layout_marginLeft="1dp">

            <ImageView
                style="@style/image_view_tutorial_like_dislike"
                android:src="@drawable/icon_swipe_right"/>

            <TextView
                style="@style/text_view_tutorial_like_dislike"
                android:text="@string/like"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_view_tutorial_top_bottom"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_round_corners_bottom"
        android:text="@string/lets_go"/>

</LinearLayout>